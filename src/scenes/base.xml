<scene>
   <camera>
        <aspect_ratio>16.0/9.0</aspect_ratio>
        <image_width>400</image_width>
        <samples_per_pixel>10</samples_per_pixel>
        <max_depth>10</max_depth>
        <fov>20.0</fov>

        <lookfrom x="13" y="2" z="3" />
        <lookat x="0" y="0" z="0" />
        <vup x="0" y="1" z="0" />

        <defocus_angle>0.6</defocus_angle>
        <defocus_dist>10.0</defocus_dist>
    </camera>

    <objects>
        <!-- Ground -->
        <sphere>
            <center x="0" y="-1000" z="0" />
            <radius>1000</radius>
            <material type="lambertian">
                <albedo r="0.5" g="0.5" b="0.5" />
            </material>
        </sphere>

        <!-- Small Spheres Grid -->
        <sphere>
            <center x="-2.2" y="0.2" z="-2.3" />
            <radius>0.2</radius>
            <material type="lambertian">
                <albedo r="0.3" g="0.8" b="0.2" />
            </material>
        </sphere>

        <sphere>
            <center x="-1.0" y="0.2" z="-1.0" />
            <radius>0.2</radius>
            <material type="metal" fuzz="0.3">
                <albedo r="0.8" g="0.8" b="0.9" />
            </material>
        </sphere>

        <sphere>
            <center x="1.0" y="0.2" z="1.0" />
            <radius>0.2</radius>
            <material type="dielectric">
                <ior>1.5</ior>
            </material>
        </sphere>

        <!-- Big Spheres -->
        <sphere>
            <center x="0" y="1" z="0" />
            <radius>1.0</radius>
            <material type="dielectric">
                <ior>1.5</ior>
            </material>
        </sphere>

        <sphere>
            <center x="-4" y="1" z="0" />
            <radius>1.0</radius>
            <material type="lambertian">
                <albedo r="0.4" g="0.2" b="0.1" />
            </material>
        </sphere>

        <sphere>
            <center x="4" y="1" z="0" />
            <radius>1.0</radius>
            <material type="metal" fuzz="0.0">
                <albedo r="0.7" g="0.6" b="0.5" />
            </material>
        </sphere>
    </objects>
</scene>
